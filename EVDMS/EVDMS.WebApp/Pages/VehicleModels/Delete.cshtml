@page "{id:int}"
@model EVDMS.WebApp.Pages.VehicleModels.DeleteModel
@{
    ViewData["Title"] = "Xoá mẫu xe";
}

<div class="page-header mb-4">
    <div>
        <h1 class="page-title text-danger">Xoá mẫu xe</h1>
        <p class="page-subtitle">Bạn có chắc chắn muốn xoá mẫu xe này khỏi danh mục phân phối?</p>
    </div>
    <a asp-page="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Quay lại danh sách
    </a>
</div>

@if (Model.Vehicle is null)
{
    <div class="alert alert-danger">Không tìm thấy mẫu xe.</div>
}
else
{
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-start">
            <div>
                <h2 class="h4 fw-semibold mb-2">@Model.Vehicle.Name</h2>
                <p class="text-muted mb-1">Mã sản phẩm: <strong>@Model.Vehicle.ModelCode</strong></p>
                <p class="text-muted mb-1">Phiên bản: @Model.Vehicle.Version</p>
                <p class="text-muted mb-0">Giá cơ sở: <strong>@Model.Vehicle.BasePrice.ToString("C0")</strong></p>
            </div>
            <span class="badge bg-secondary-subtle text-secondary-emphasis px-3 py-2 rounded-pill">
                @Model.Vehicle.Status
            </span>
        </div>
    </div>

    <form method="post" class="d-flex justify-content-end gap-2">
        <a asp-page="Index" class="btn btn-light">Huỷ</a>
        <button type="submit" class="btn btn-danger">Xoá vĩnh viễn</button>
    </form>
}
