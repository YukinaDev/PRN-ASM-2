@page
@model EVDMS.WebApp.Pages.DistributionPlans.IndexModel
@{
    ViewData["Title"] = "Kế hoạch phân phối";
}

<div class="page-header mb-4">
    <div>
        <h1 class="page-title">Kế hoạch phân phối &amp; chính sách bán hàng</h1>
        <p class="page-subtitle">EVM Staff tạo kế hoạch phân phối, cấu hình chiết khấu và gửi phê duyệt cho Admin.</p>
    </div>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Tạo kế hoạch mới
    </a>
</div>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Tên kế hoạch</th>
                        <th>Thời gian</th>
                        <th>Trạng thái</th>
                        <th>Người tạo</th>
                        <th>Phê duyệt</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Plans.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="text-center py-4 text-muted">Chưa có kế hoạch nào. Hãy tạo kế hoạch đầu tiên.</td>
                    </tr>
                }
                else
                {
                    foreach (var plan in Model.Plans)
                    {
                        <tr>
                            <td class="fw-semibold">@plan.PlanName</td>
                            <td>@plan.TargetMonth.ToString("MMM yyyy")</td>
                            <td>
                                <span class="@GetStatusBadge(plan.Status)">@plan.Status</span>
                            </td>
                            <td>
                                <div class="fw-semibold">@plan.CreatedBy</div>
                                <div class="text-muted small">@plan.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</div>
                            </td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(plan.ApprovedBy))
                                {
                                    <div class="fw-semibold">@plan.ApprovedBy</div>
                                    <div class="text-muted small">@plan.ApprovedAt?.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</div>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa phê duyệt</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a asp-page="Details" asp-route-id="@plan.Id" class="btn btn-outline-secondary">
                                        <i class="bi bi-eye"></i> Chi tiết
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    private static string GetStatusBadge(PlanStatus status) => status switch
    {
        PlanStatus.Draft => "badge rounded-pill bg-secondary-subtle text-secondary-emphasis px-3 py-2",
        PlanStatus.Submitted => "badge rounded-pill bg-warning-subtle text-warning-emphasis px-3 py-2",
        PlanStatus.Approved => "badge rounded-pill bg-success-subtle text-success-emphasis px-3 py-2",
        PlanStatus.Rejected => "badge rounded-pill bg-danger-subtle text-danger-emphasis px-3 py-2",
        _ => "badge rounded-pill bg-light text-dark"
    };
}
