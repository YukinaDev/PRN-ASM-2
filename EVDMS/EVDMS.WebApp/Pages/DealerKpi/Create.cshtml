@page
@model EVDMS.WebApp.Pages.DealerKpi.CreateModel
@{
    ViewData["Title"] = "Tạo KPI đại lý";
}

<div class="page-header mb-4">
    <div>
        <h1 class="page-title">Thiết lập KPI &amp; hợp đồng kinh doanh</h1>
        <p class="page-subtitle">Đặt mục tiêu doanh số, số lượng xe và vòng quay tồn kho cho đại lý.</p>
    </div>
    <a asp-page="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Quay lại danh sách
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-4">
        <form method="post" class="row g-4">
            <div class="col-md-6">
                <label asp-for="Plan.DealerId" class="form-label"></label>
                <select asp-for="Plan.DealerId" asp-items="Model.DealerOptions" class="form-select">
                    <option value="">-- Chọn đại lý --</option>
                </select>
                <span asp-validation-for="Plan.DealerId" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Plan.TargetStartDate" class="form-label"></label>
                <input asp-for="Plan.TargetStartDate" class="form-control" />
                <span asp-validation-for="Plan.TargetStartDate" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Plan.TargetEndDate" class="form-label"></label>
                <input asp-for="Plan.TargetEndDate" class="form-control" />
                <span asp-validation-for="Plan.TargetEndDate" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Plan.RevenueTarget" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text">₫</span>
                    <input asp-for="Plan.RevenueTarget" class="form-control text-end" />
                </div>
                <span asp-validation-for="Plan.RevenueTarget" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Plan.UnitTarget" class="form-label"></label>
                <input asp-for="Plan.UnitTarget" class="form-control text-end" />
                <span asp-validation-for="Plan.UnitTarget" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Plan.InventoryTurnoverTarget" class="form-label"></label>
                <input asp-for="Plan.InventoryTurnoverTarget" class="form-control text-end" />
                <span asp-validation-for="Plan.InventoryTurnoverTarget" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Plan.Notes" class="form-label"></label>
                <textarea asp-for="Plan.Notes" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Plan.Notes" class="text-danger"></span>
            </div>
            <div class="col-12 d-flex justify-content-end gap-2">
                <a asp-page="Index" class="btn btn-light">Huỷ</a>
                <button type="submit" class="btn btn-primary">Lưu kế hoạch</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
