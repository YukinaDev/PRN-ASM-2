@page
@model EVDMS.WebApp.Pages.DealerKpi.IndexModel
@{
    ViewData["Title"] = "KPI đại lý";
}

<div class="page-header mb-4">
    <div>
        <h1 class="page-title">KPI &amp; giám sát đại lý</h1>
        <p class="page-subtitle">Thiết lập chỉ tiêu kinh doanh, gửi phê duyệt và theo dõi tiến độ thực hiện của đại lý.</p>
    </div>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Tạo kế hoạch KPI
    </a>
</div>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Đại lý</th>
                        <th>Chu kỳ</th>
                        <th class="text-end">Doanh thu mục tiêu</th>
                        <th class="text-end">Số xe mục tiêu</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Plans.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="text-center py-4 text-muted">Chưa có kế hoạch KPI nào được tạo.</td>
                    </tr>
                }
                else
                {
                    foreach (var plan in Model.Plans)
                    {
                        <tr>
                            <td class="fw-semibold">@plan.DealerName</td>
                            <td>@plan.TargetStartDate.ToString("dd/MM/yyyy") - @plan.TargetEndDate.ToString("dd/MM/yyyy")</td>
                            <td class="text-end">@plan.RevenueTarget.ToString("N0")</td>
                            <td class="text-end">@plan.UnitTarget</td>
                            <td><span class="@GetStatusBadge(plan.Status)">@plan.Status</span></td>
                            <td class="text-end">
                                <a asp-page="Details" asp-route-id="@plan.Id" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-eye"></i> Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    private static string GetStatusBadge(PlanStatus status) => status switch
    {
        PlanStatus.Draft => "badge rounded-pill bg-secondary-subtle text-secondary-emphasis px-3 py-2",
        PlanStatus.Submitted => "badge rounded-pill bg-warning-subtle text-warning-emphasis px-3 py-2",
        PlanStatus.Approved => "badge rounded-pill bg-success-subtle text-success-emphasis px-3 py-2",
        PlanStatus.Rejected => "badge rounded-pill bg-danger-subtle text-danger-emphasis px-3 py-2",
        _ => "badge rounded-pill bg-light text-dark"
    };
}
